<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Carnet Digital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/Layout_plantilla_estilos.css" />
    <link rel="stylesheet" href="/css/Vista_carnet_estilos.css" />
    <style>
        body {
            background-image: url('/images/cuc2.jpg') !important;
            background-size: cover !important;
            background-position: center !important;
            background-repeat: no-repeat !important;
            background-attachment: fixed !important;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header/Navbar -->
    <nav class="layout-navbar">
        <div class="nav-container">
            <!-- Logo -->
            <div class="nav-logo">
                <img src="/images/logocuc.png" alt="Logo" class="logo-img">
            </div>

            <!-- Título del Sistema -->
            <div class="nav-title">
                <h1>Sistema de Carnet Digital</h1>
            </div>

            <!-- Menú Hamburguesa -->
            <div class="nav-menu">
                <button class="hamburger-btn" id="hamburgerBtn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </div>
    </nav>

    <!-- Menú Desplegable -->
    <div class="dropdown-menu" id="dropdownMenu">
        <div class="menu-header">
            <h3>Menú Principal</h3>
            <button class="close-btn" id="closeBtn">&times;</button>
        </div>
        <div class="menu-items">
            <a href="#" class="menu-item">
                <span class="menu-icon"><i class="bi bi-house-door"></i></span>
                Inicio
            </a>
            <a href="/Modulo Administradores/Registro Funcionarios/Registrar" class="menu-item">
                <span class="menu-icon"><i class="bi bi-people"></i></span>
                Registro de Funcionarios
            </a>
            <a href="#" class="menu-item">
                <span class="menu-icon"><i class="bi bi-person"></i></span>
                Perfil
            </a>
            <a href="#" class="menu-item">
                <span class="menu-icon"><i class="bi bi-phone"></i></span>
                Mi Carnet
            </a>
            <a href="#" class="menu-item">
                <span class="menu-icon"><i class="bi bi-people"></i></span>
                Encargados
            </a>
            <a href="#" class="menu-item">
                <span class="menu-icon"><i class="bi bi-box-arrow-right"></i></span>
                Cerrar Sesión
            </a>
        </div>
    </div>

    <!-- Overlay para cerrar menú -->
    <div class="menu-overlay" id="menuOverlay"></div>

    <!-- Contenido Principal -->
    <main class="layout-content" id="mainContent">
        <div class="content-container">
            @RenderBody()
        </div>
    </main>

    <!-- Modal -->
    <div class="modal fade" id="validationModal" tabindex="-1" aria-labelledby="validationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" id="modalHeader">
                    <h5 class="modal-title" id="modalTitle">Mensaje</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalBody"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Control del menú hamburguesa
        const hamburgerBtn = document.getElementById('hamburgerBtn');
        const dropdownMenu = document.getElementById('dropdownMenu');
        const closeBtn = document.getElementById('closeBtn');
        const menuOverlay = document.getElementById('menuOverlay');
        const mainContent = document.getElementById('mainContent');

        function toggleMenu() {
            dropdownMenu.classList.toggle('active');
            menuOverlay.classList.toggle('active');
            mainContent.classList.toggle('menu-open');
        }

        hamburgerBtn.addEventListener('click', toggleMenu);
        closeBtn.addEventListener('click', toggleMenu);
        menuOverlay.addEventListener('click', toggleMenu);

        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', toggleMenu);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>