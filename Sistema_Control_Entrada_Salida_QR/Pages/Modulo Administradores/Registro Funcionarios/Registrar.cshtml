@page
@model Sistema_Control_Entrada_Salida_QR.Pages.Modulo_Administradores.Registro_Funcionarios.RegistrarModel
@{
    ViewData["Title"] = "Registro de Funcionarios";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Carnet Digital</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Login_estilos.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>

<body class="login-body">

    <div class="login-container" style="max-width: 720px;">
        <!-- ENCABEZADO -->
        <div class="login-header">
            <h1>Registro de Funcionarios</h1>
            <div class="temporal-badge">
                FORMULARIO OFICIAL
            </div>
        </div>

        <!-- CONTENIDO -->
        <div class="login-body-content">

            @if (!string.IsNullOrEmpty(Model.Mensaje))
            {
                <div class="alert @(Model.Resultado ? "alert-success" : "alert-danger")">
                    @Model.Mensaje
                </div>
            }

            <form method="post" enctype="multipart/form-data">

                <!-- SECCIÓN DE FOTO DE PERFIL -->
                <div class="text-center mt-3">
                    <div style="
                width:130px; height:130px;
                margin:auto;
                border-radius:50%;
                overflow:hidden;
                border:4px solid var(--primary-blue);
                background:#f0f0f0;
                display:flex;
                align-items:center;
                justify-content:center;
            ">
                        <img id="previewFoto"
                             src="https://cdn-icons-png.flaticon.com/512/3177/3177440.png"
                             style="width:100%; height:100%; object-fit:cover;" />
                    </div>

                    <label class="btn btn-primary mt-2">
                        <i class="fa fa-camera"></i> Subir Foto
                        <input asp-for="Foto" type="file" accept="image/*"
                               style="display:none;" onchange="previewImage(event)" />
                    </label>
                </div>

                <!-- TIPO IDENTIFICACION -->
                <div class="login-form-group">
                    <label class="login-label">Tipo de Identificación</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-list"></i>
                        <select asp-for="Funcionario.Id_Tipo_Identificacion"
                                asp-items="Model.TiposIdentificacion"
                                class="login-input"></select>
                    </div>
                </div>

                <!-- IDENTIFICACIÓN -->
                <div class="login-form-group">
                    <label class="login-label">Identificación</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-id-card"></i>
                        <input asp-for="Funcionario.Identificacion" class="login-input" placeholder="Ingrese la identificación" />
                    </div>
                </div>

                <!-- NOMBRE -->
                <div class="login-form-group">
                    <label class="login-label">Nombre</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-user"></i>
                        <input asp-for="Funcionario.Nombre" class="login-input" placeholder="Ingrese el nombre" />
                    </div>
                </div>

                <!-- PRIMER APELLIDO -->
                <div class="login-form-group">
                    <label class="login-label">Primer Apellido</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-user-tag"></i>
                        <input asp-for="Funcionario.Primer_Apellido" class="login-input" placeholder="Ingrese el apellido" />
                    </div>
                </div>

                <!-- SEGUNDO APELLIDO -->
                <div class="login-form-group">
                    <label class="login-label">Segundo Apellido</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-user-tag"></i>
                        <input asp-for="Funcionario.Segundo_Apellido" class="login-input" placeholder="Ingrese el apellido" />
                    </div>
                </div>

                <!-- FECHA NACIMIENTO -->
                <div class="login-form-group">
                    <label class="login-label">Fecha de Nacimiento</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-calendar"></i>
                        <input asp-for="Funcionario.Fecha_Nacimiento" type="date" class="login-input" />
                    </div>
                </div>

                <!-- CORREO -->
                <div class="login-form-group">
                    <label class="login-label">Correo Institucional</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Funcionario.CorreoInstitucional" class="login-input" placeholder="usuario@cuc.cr" />
                    </div>
                </div>

                @* <!-- CONTRASEÑA -->
                <div class="login-form-group">
                    <label class="login-label">Contraseña</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Funcionario.Contrasena" type="password" class="login-input" placeholder="•••••••" />
                    </div>
                </div> *@

                <!-- TIPO FUNCIONARIO -->
                <div class="login-form-group">
                    <label class="login-label">Tipo de Funcionario</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-briefcase"></i>
                        <select asp-for="Funcionario.Id_Tipo_Funcionario"
                                asp-items="Model.TiposFuncionario"
                                class="login-input"></select>
                    </div>
                </div>

                <!-- DEPENDENCIA -->
                <div class="login-form-group">
                    <label class="login-label">Dependencia</label>
                    <div class="login-input-wrapper">
                        <i class="fas fa-building"></i>
                        <select asp-for="Funcionario.Id_Dependencia"
                                asp-items="Model.Dependencias"
                                class="login-input"></select>
                    </div>
                </div>

                <!-- BOTÓN SUBMIT -->
                <button type="submit" class="login-btn">
                    <i class="fas fa-save me-2"></i> Registrar Funcionario
                </button>

            </form>
        </div>
    </div>

    <script>
        function previewImage(event) {
            const img = document.getElementById("previewFoto");

            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.objectFit = "cover";
        }
    </script>

</body>
</html>







