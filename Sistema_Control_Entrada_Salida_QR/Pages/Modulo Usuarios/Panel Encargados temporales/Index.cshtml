@page
@model Sistema_Control_Entrada_Salida_QR.Pages.Modulo_Usuarios.Panel_Encargados_temporales.IndexModel
@{
    Layout = "Layout_Plantilla";
}
<link href="~/css/Registro_Encargados_Legales_Estilos.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">


<div class="registro-container">

    <div class="registro-title">Registro de Encargado Legal Temporal</div>

    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">
            <!-- Identificacion -->
            <div class="col-md-4">
                <label asp-for="Encargado_Temporal.Identificacion_Estudiante" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-user"></i>
                    <input asp-for="Encargado_Temporal.Identificacion_Estudiante" class="registro-input registro-input-icon" readonly="true" />
                </div>
            </div>
            <!-- Nombre -->
            <div class="col-md-4">
                <label asp-for="Encargado_Temporal.Nombre" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-user"></i>
                    <input asp-for="Encargado_Temporal.Nombre" class="registro-input registro-input-icon" />
                </div>
            </div>

            <!-- Primer Apellido -->
            <div class="col-md-4">
                <label asp-for="Encargado_Temporal.Primer_Apellido" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-user"></i>
                    <input asp-for="Encargado_Temporal.Primer_Apellido" class="registro-input registro-input-icon" />
                </div>
            </div>

            <!-- Segundo Apellido -->
            <div class="col-md-4">
                <label asp-for="Encargado_Temporal.Segundo_Apellido" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-user"></i>
                    <input asp-for="Encargado_Temporal.Segundo_Apellido" class="registro-input registro-input-icon" />
                </div>
            </div>

            <!-- Tipo Identificación -->
            <div class="col-md-4">
                <label asp-for="Encargado_Temporal.ID_Tipo_Identificacion" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-id-card"></i>
                    <select asp-for="Encargado_Temporal.ID_Tipo_Identificacion"
                            asp-items="Model.TiposIdentificacion"
                            class="registro-select registro-input-icon"></select>
                </div>
            </div>

            <!-- Identificación -->
            <div class="col-md-4">
                <label asp-for="Encargado_Temporal.Identificacion" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-hashtag"></i>
                    <input asp-for="Encargado_Temporal.Identificacion" class="registro-input registro-input-icon" />
                </div>
            </div>

            <!-- Teléfono -->
            <div class="col-md-4">
                <label asp-for="Encargado_Temporal.Telefono" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-phone"></i>
                    <input asp-for="Encargado_Temporal.Telefono" class="registro-input registro-input-icon" />
                </div>
            </div>

            <!-- Parentesco -->
            <div class="col-md-6">
                <label asp-for="Encargado_Temporal.Id_Parentesco" class="registro-label"></label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-users"></i>
                    <select asp-for="Encargado_Temporal.Id_Parentesco"
                            asp-items="Model.Parentescos"
                            class="registro-select registro-input-icon"></select>
                </div>
            </div>

            <!-- Foto -->
            <div class="col-md-6">
                <label asp-for="FotoFile" class="registro-label">Foto (JPG/PNG)</label>
                <div class="registro-input-wrapper">
                    <i class="fas fa-image"></i>
                    <input asp-for="FotoFile" type="file" accept="image/*" class="registro-file registro-input-icon" />
                </div>
            </div>

        </div>

        <div class="registro-buttons">
            <button type="submit" class="registro-btn registro-btn-primary">
                <i class="fas fa-user-plus me-2"></i> Registrar Encargado
            </button>

            <a asp-page="/Index" class="registro-btn registro-btn-secondary text-decoration-none">
                <i class="fas fa-times me-2"></i> Cancelar
            </a>
        </div>

        @if (!string.IsNullOrEmpty(Model.Encargado_Temporal?.Mensaje))
        {
            <div class="registro-mensaje mt-3">
                @Model.Encargado_Temporal.Mensaje
            </div>
        }

    </form>
</div>

<!--Modal de resultados -->
<div class="modal fade" id="resultModal" tabindex="-1" aria-labelledby="resultModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="resultModalLabel">Resultado</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" id="resultModalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mensaje = '@TempData["Resultado"]';
            const tipo = '@TempData["TipoMensaje"]';

            if (mensaje && mensaje.trim() !== "") {
                const resultModalBody = document.getElementById("resultModalBody");
                const resultModalTitle = document.getElementById("resultModalLabel");

                if (tipo === "exito") {
                    resultModalTitle.textContent = "Éxito";
                    resultModalBody.textContent = mensaje;
                } else {
                    resultModalTitle.textContent = "Error";
                    resultModalBody.textContent = mensaje;
                }

                const modal = new bootstrap.Modal(document.getElementById("resultModal"));
                modal.show();
            }
        });

    </script>
}




